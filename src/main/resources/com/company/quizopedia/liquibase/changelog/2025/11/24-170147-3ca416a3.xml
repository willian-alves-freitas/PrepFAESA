<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Quizopedia">
        <createTable tableName="CONTEUDO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CONTEUDO"/>
            </column>
            <column name="NOME" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRICAO" type="CLOB"/>
            <column name="ARQUIVO" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="TEMA_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Quizopedia">
        <createTable tableName="TEMA">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TEMA"/>
            </column>
            <column name="ICONE" type="BLOB"/>
            <column name="NOME" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRICAO" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Quizopedia">
        <createIndex indexName="IDX_CONTEUDO_TEMA" tableName="CONTEUDO">
            <column name="TEMA_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TEMA_ID" baseTableName="CONTEUDO" constraintName="FK_CONTEUDO_ON_TEMA"
                                 onDelete="CASCADE" referencedColumnNames="ID" referencedTableName="TEMA"/>
    </changeSet>
</databaseChangeLog>