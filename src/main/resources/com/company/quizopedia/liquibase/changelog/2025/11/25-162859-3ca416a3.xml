<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Quizopedia">
        <createTable tableName="TURMA">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TURMA"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Quizopedia">
        <createTable tableName="TURMA_TEMA_LINK">
            <column name="TEMA_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TURMA_TEMA_LINK"/>
            </column>
            <column name="TURMA_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TURMA_TEMA_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Quizopedia">
        <addColumn tableName="USER_">
            <column name="TURMA_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="Quizopedia">
        <createIndex indexName="IDX_USER__TURMA" tableName="USER_">
            <column name="TURMA_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TURMA_ID" baseTableName="USER_" constraintName="FK_USER__ON_TURMA"
                                 referencedColumnNames="ID" referencedTableName="TURMA"/>
    </changeSet>
    <changeSet id="5" author="Quizopedia">
        <addForeignKeyConstraint baseColumnNames="TEMA_ID" baseTableName="TURMA_TEMA_LINK"
                                 constraintName="FK_TURTEM_ON_TEMA" referencedColumnNames="ID"
                                 referencedTableName="TEMA"/>
    </changeSet>
    <changeSet id="6" author="Quizopedia">
        <addForeignKeyConstraint baseColumnNames="TURMA_ID" baseTableName="TURMA_TEMA_LINK"
                                 constraintName="FK_TURTEM_ON_TURMA" referencedColumnNames="ID"
                                 referencedTableName="TURMA"/>
    </changeSet>
</databaseChangeLog>