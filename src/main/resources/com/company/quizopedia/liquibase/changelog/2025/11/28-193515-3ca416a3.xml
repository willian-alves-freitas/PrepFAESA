<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Quizopedia">
        <addColumn tableName="OPCAO">
            <column name="EXPLICACAO" type="CLOB"/>
        </addColumn>

        <addNotNullConstraint columnName="EXPLICACAO" defaultNullValue="''" tableName="OPCAO"/>
    </changeSet>
    <changeSet id="2" author="Quizopedia">
        <addColumn tableName="QUESTAO">
            <column name="QUESTIONARIO_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="QUESTIONARIO_ID" tableName="QUESTAO"/>
    </changeSet>
    <changeSet id="3" author="Quizopedia">
        <createIndex indexName="IDX_QUESTAO_QUESTIONARIO" tableName="QUESTAO">
            <column name="QUESTIONARIO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="QUESTIONARIO_ID" baseTableName="QUESTAO"
                                 constraintName="FK_QUESTAO_ON_QUESTIONARIO" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="QUESTIONARIO"/>
    </changeSet>
</databaseChangeLog>