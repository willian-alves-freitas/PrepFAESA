<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://conteudoDetailView.title"
      focusComponent="form">
    <data>
        <instance id="conteudoDc"
                  class="com.company.quizopedia.entity.Conteudo">
            <fetchPlan extends="_base"/>
            <loader id="conteudoDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="conteudoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea id="nomeField" property="nome"/>
            <textArea id="descricaoField" property="descricao"/>
            <fileStorageUploadField id="arquivoField" clearButtonVisible="true" fileNameVisible="true"
                                    property="arquivo"
                                    acceptedFileTypes="application/pdf"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
