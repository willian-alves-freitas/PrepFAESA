<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://temaDetailView.title"
      focusComponent="form">
    <data>
        <instance id="temaDc"
                  class="com.company.quizopedia.entity.Tema">
            <fetchPlan extends="_base">
                <property name="conteudos" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="temaDl"/>
            <collection id="conteudosDc" property="conteudos"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="temaDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea id="nomeField" property="nome"/>
            <textArea id="descricaoField" property="descricao"/>
            <fileUploadField id="iconeField" clearButtonVisible="true" fileNameVisible="true" property="icone"
                             acceptedFileTypes="image/jpeg, image/png, image/webp"/>
            <textField id="referenciaPontuacaoField" property="referenciaPontuacao"/>
        </formLayout>
        <h4 text="msg://com.company.quizopedia.entity/Tema.conteudos"/>
        <hbox id="conteudosButtonsPanel" classNames="buttons-panel">
            <button action="conteudosDataGrid.createAction"/>
            <button action="conteudosDataGrid.editAction"/>
            <button action="conteudosDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="conteudosDataGrid" dataContainer="conteudosDc" width="100%">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="nome"/>
                <column property="descricao"/>
                <column property="arquivo"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
